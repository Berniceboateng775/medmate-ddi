            "url": {
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "login", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"kofinyarko2004.g@gmail.com\",\n  \"kon@ddifyp04\": \"YOUR_SUPERUSER_PASSWORD\"\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "if (pm.response.code === 200) {",
                "  const json = pm.response.json();",
                "  pm.collectionVariables.set('su_access', json.access || '');",
                "  pm.collectionVariables.set('su_refresh', json.refresh || '');",
                "} else {",
                "  pm.collectionVariables.unset('su_access');",
                "  pm.collectionVariables.unset('su_refresh');",
                "}",
                "pm.test('Got access token', () => pm.expect(pm.collectionVariables.get('su_access')).to.be.ok);"
              ],
              "type": "text/javascript"
            }
          }]
        },
        {
          "name": "Superuser Me",
