{
  "info": {
    "_postman_id": "11111111-1111-4111-8111-111111111111",
    "name": "DDI Mini - Login (no env)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Superuser Login (hard-coded URL)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "http://localhost:8000/api/auth/login/",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"YOUR_SUPERUSER_EMAIL\",\n  \"password\": \"YOUR_SUPERUSER_PASSWORD\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('HTTP 200', () => pm.expect(pm.response.code).to.eql(200));",
              "const j = pm.response.json();",
              "pm.collectionVariables.set('su_access', j.access || '');",
              "pm.collectionVariables.set('su_refresh', j.refresh || '');",
              "pm.test('Saved access token', () => pm.expect(pm.collectionVariables.get('su_access')).to.be.ok);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
